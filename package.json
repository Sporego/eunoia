{
  "name": "eunoia",
  "version": "0.1.9",
  "description": "A work by Filbert Shi",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "postinstall": "cd client && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sporego/eunoia.git"
  },
  "author": "Filbert Shi and Jay Choi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sporego/eunoia/issues"
  },
  "homepage": "https://github.com/Sporego/eunoia#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "mongoose": "^5.6.0",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "i": "^0.3.6",
    "nodemon": "^1.19.1",
    "npm": "^6.9.0"
  }
}
